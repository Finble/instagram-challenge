<% if @pictures.any? %>
  
  <% @pictures.each do |picture| %>
    <h2><%= link_to picture.name, picture_path(picture) %></h2>
    <%= link_to "Edit #{picture.name}", edit_picture_path(picture) %>
  
  <% end %>

<% else %>
  
  <h1>No pictures yet!</h1>

<% end %>

<a href="<%= new_picture_path %>">Add a picture</a>
