<% if @pictures.any? %>
  
  <% @pictures.each do |picture| %>
    <h2><%= link_to picture.name, picture_path(picture) %></h2>  <!--READ/SHOW-->

			<% if picture.comments.any? %>
			  <ul>
			    <% picture.comments.each do |comment| %>
			      <li>
			        <%= comment.comments %>
			      </li>
			    <% end %>
			  </ul>
			<% else %>
			  <p>No comments.</p>
			<% end %>
 
    <%= link_to "Edit #{picture.name}", edit_picture_path(picture) %> <!--EDIT-->
    <%= link_to "Delete #{picture.name}", picture_path(picture), method: :delete %> <!--DELETE-->
  	<%= link_to "Comment #{picture.name}", new_picture_comment_path(picture) %>
  	<% end %>

	<% else %>
  
  <h1>No pictures yet!</h1>

<% end %>

<a href="<%= new_picture_path %>">Add a picture</a>
